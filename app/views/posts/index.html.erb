<div class="container">
  <h1>Posts</h1>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Published</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.published? ? 'Yes' : 'No' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
