<div class="container">
  <h1>Posts</h1>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Published</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %> <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %> <%= link_to 'Destroy', post_path(post), data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <td><%= post.content %></td>
          <td><%= post.published? ? 'Yes' : 'No' %> <%= link_to 'Publish', publish_post_path(post), data: { turbo_method: :post }, class: 'btn btn-success' %> <%= link_to 'Unpublish', unpublish_post_path(post), data: { turbo_method: :post }, class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
